{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zashboard manifest",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "datasets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "partitions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "urls": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "required": [
          "name",
          "urls"
        ]
      }
    }
  },
  "required": [
    "version",
    "datasets"
  ]
}
